<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="ca.uottawa.exception.orgonizor.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical">

        <TabHost
            android:id="@+id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:visibility="visible" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                         android:id="@+id/tab3"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical"
                         android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/materials"
                                android:textSize="30sp" />

                            <ImageButton
                                android:id="@+id/button12"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_add_shop" />

                        </RelativeLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="180dp">
                            <GridLayout
                                android:id="@+id/MaterialGrid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="3">

                                <CheckBox
                                    android:id="@+id/checkBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Broom" />

                                <CheckBox
                                    android:id="@+id/checkBox2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Batteries" />

                                <CheckBox
                                    android:id="@+id/checkBox3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vacuum filter" />

                                <CheckBox
                                    android:id="@+id/checkBox4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Detergent" />

                                <CheckBox
                                    android:id="@+id/checkBox5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 5" />

                                <CheckBox
                                    android:id="@+id/checkBox6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 6" />

                                <CheckBox
                                    android:id="@+id/checkBox7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 7" />

                                <CheckBox
                                    android:id="@+id/checkBox8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 8" />
                            </GridLayout>
                        </ScrollView>

                        <RelativeLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/groceries"
                                android:textSize="30sp"
                                />

                            <ImageButton
                                android:id="@+id/button3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_add_shop" />

                         </RelativeLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <GridLayout
                                android:id="@+id/GroceGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:columnCount="3">

                                <CheckBox
                                    android:id="@+id/checkBox21"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Milk" />

                                <CheckBox
                                    android:id="@+id/checkBox22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Eggs" />

                                <CheckBox
                                    android:id="@+id/checkBox23"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tomatoes" />

                                <CheckBox
                                    android:id="@+id/checkBox24"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bread" />

                                <CheckBox
                                    android:id="@+id/checkBox25"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meat" />

                                <CheckBox
                                    android:id="@+id/checkBox26"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fish" />

                                <CheckBox
                                    android:id="@+id/checkBox27"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 7" />

                                <CheckBox
                                    android:id="@+id/checkBox28"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 8" />
                            </GridLayout>
                        </ScrollView>

                    </LinearLayout>
                    <LinearLayout
                         android:id="@+id/tab2"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical"
                         android:visibility="invisible">

                        <RelativeLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:layout_marginBottom="20dp">

                             <ImageButton
                                 android:id="@+id/addtask"
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:background="@drawable/ic_add"
                                 android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/addtask"
                                android:layout_toRightOf="@+id/addtask"
                                android:text="@string/new_task"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/addtask"
                                android:layout_alignBottom="@+id/addtask"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="Filter by"
                                android:textSize="10sp" />

                        </RelativeLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/taskList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/fridge"
                                android:textSize="30sp" />

                            <ImageButton
                                android:id="@+id/button"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:background="@drawable/ic_add" />

                        </RelativeLayout>
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="110dp">
                            <GridLayout
                                android:id="@+id/FridgeGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:columnCount="3">

                                <CheckBox
                                    android:id="@+id/checkBox9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Milk" />

                                <CheckBox
                                    android:id="@+id/checkBox10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Egg" />

                                <CheckBox
                                    android:id="@+id/checkBox11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meat" />

                                <CheckBox
                                    android:id="@+id/checkBox12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bread" />

                            </GridLayout>
                        </ScrollView>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cupboard"
                                android:textSize="30sp" />

                            <ImageButton
                                android:id="@+id/button4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:background="@drawable/ic_add" />

                        </RelativeLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="110dp">
                            <GridLayout
                                android:id="@+id/CupGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:columnCount="3">

                                <CheckBox
                                    android:id="@+id/checkBox13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rice" />

                                <CheckBox
                                    android:id="@+id/checkBox14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Salt and Pepper" />

                                <CheckBox
                                    android:id="@+id/checkBox15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flour" />

                                <CheckBox
                                    android:id="@+id/checkBox16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pasta" />

                            </GridLayout>
                        </ScrollView>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/broom_closet"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/button9"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="start"
                                android:background="@drawable/ic_add" />

                        </RelativeLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="110dp">
                            <GridLayout
                                android:id="@+id/BroomCGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:columnCount="3">

                                <CheckBox
                                    android:id="@+id/checkBox17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cleaner" />

                                <CheckBox
                                    android:id="@+id/checkBox18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Broom" />

                                <CheckBox
                                    android:id="@+id/checkBox19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Toilet paper" />

                                <CheckBox
                                    android:id="@+id/checkBox20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item 4" />

                            </GridLayout>
                        </ScrollView>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </TabHost>
    </LinearLayout>

    <!-- Side navigation drawer UI -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="200dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"
        />

</android.support.v4.widget.DrawerLayout>
